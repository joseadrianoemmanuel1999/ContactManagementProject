@page
@model ContactManagementProject.Pages.Contacts.IndexModel
@{
    ViewData["Title"] = "Contact List";
}

<h2>Contacts</h2>

<a class="btn btn-primary" asp-page="Create">Create New Contact</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.ContactNumber</td>
                <td>
                    <a asp-page="Details" asp-route-id="@contact.ID" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="Edit" asp-route-id="@contact.ID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@contact.ID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
